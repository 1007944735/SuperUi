<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sgevf.ui.horizontalScrollerView.HorizontalScrollerView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.sgevf.ui.audioAnimateView.AudioAnimateView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff00"
        android:padding="10dp" />

    <com.sgevf.ui.AudioProgressView.AudioProgressView
        android:id="@+id/audioProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pauseIcon="@mipmap/ico_pause"
        app:pictureSize="200dp"
        app:playIcon="@mipmap/ico_play"
        app:progressRadius="5dp"
        app:torusRadius="10dp" />

    <com.sgevf.ui.panDisplayView.PanDisplayView
        android:id="@+id/panDisplay"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:contentRes="@drawable/banner_default_pic"/>
</LinearLayout>