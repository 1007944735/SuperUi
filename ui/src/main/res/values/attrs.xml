<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshRecyclerView">
        <attr name="noDataSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="selectColor"/>
        <attr name="otherColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ScrollingBanner">
        <attr name="delayTime" format="integer" />
        <attr name="scrollTime" format="integer" />
        <attr name="scrollState" format="boolean" />
        <attr name="autoScroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTabLayout">
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabSelectedTextSize" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabBackgroundColor" format="color" />
        <attr name="tabSelectedBackgroundColor" format="color" />

        <attr name="tabIndicatorHeight" format="dimension" />
        <attr name="tabIndicatorWidth" format="dimension" />
        <attr name="tabIndicatorColor" format="color" />

        <attr name="tabType" format="enum">
            <enum name="modeFix" value="1" />
            <enum name="modeScroll" value="2" />
        </attr>

        <attr name="autoIndicatorWidth" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FlowHorizontalView">
        <attr name="rowSpace" format="dimension" />
        <attr name="viewSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AudioProgressView">
        <attr name="pictureSize" format="dimension" />
        <attr name="torusRadius" format="dimension" />
        <attr name="progressRadius" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="playIcon" format="reference" />
        <attr name="pauseIcon" format="reference" />
        <attr name="imageRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="PanDisplayView">
        <attr name="contentRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="PromptView">
        <attr name="tipColor" format="color" />
        <attr name="tipContentColor" format="color" />
        <attr name="tipContentSize" format="dimension" />
        <attr name="tipSize" format="dimension" />
        <attr name="text" format="integer" />
    </declare-styleable>

    <attr name="selectColor" format="color"/>
    <declare-styleable name="MyPickerView">
        <attr name="selectColor"/>
        <attr name="normalColor" format="color" />
        <attr name="maxTextSize" format="dimension" />
        <attr name="minTextSize" format="dimension" />
        <attr name="maxTextAlpha" format="integer" />
        <attr name="minTextAlpha" format="integer" />
    </declare-styleable>
</resources>