<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshRecyclerView">
        <attr name="noDataSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="selectColor" format="color" />
        <attr name="otherColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ScrollingBanner">
        <attr name="delayTime" format="integer"/>
        <attr name="scrollTime" format="integer"/>
        <attr name="scrollState" format="boolean"/>
        <attr name="autoScroll" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CustomTabLayout">
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabSelectedTextSize" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabBackgroundColor" format="color" />
        <attr name="tabSelectedBackgroundColor" format="color" />

        <attr name="tabIndicatorHeight" format="dimension" />
        <attr name="tabIndicatorWidth" format="dimension" />
        <attr name="tabIndicatorColor" format="color" />

        <attr name="tabType" format="enum">
            <enum name="mode_fix" value="1" />
            <enum name="mode_scroll" value="2" />
        </attr>
    </declare-styleable>
</resources>